{% extends "@AbstractApiTheme/admin/base.html.twig" %}

{%- block content_title -%}{% trans %}api.applications.add{% endtrans %}{%- endblock -%}

{%- block content_header_nav -%}
    <a class="content-header-nav-back uk-navbar-content"
       href="{{ path('adminApiApplications') }}"
       title="{% trans %}back_to.applications{% endtrans %}"
       data-uk-tooltip="{animation:true}"><i class="uk-icon-rz-back-parent"></i></a>
{%- endblock -%}

{%- block content_body -%}
    <article class="content">
        {% form_theme form '@Rozier/forms.html.twig' %}
        {{ form_start(form, {
            'attr': {
                'id': 'application-form',
                'class': 'uk-form uk-form-stacked'
            }
        }) }}{{ form_widget(form) }}
        <fieldset data-uk-margin>
            {% spaceless %}
                <button data-action-save="#application-form"
                        class="uk-button uk-button-primary rz-action-save" type="submit">
                    <span class="icon-container"><i class="uk-icon-rz-save"></i></span>
                    <span class="label"><span class="label-text">{% block content_form_submit_label %}
                                {%- trans -%}api.applications.form.add{%- endtrans -%}
                            {% endblock %}</span></span>
                </button>
            {% endspaceless %}
        </fieldset>
        {{ form_end(form) }}
    </article>
    {% include '@AbstractApiTheme/admin/applications/actionsMenu.html.twig' %}
{%- endblock -%}
