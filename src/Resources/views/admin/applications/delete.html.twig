{% extends "@AbstractApiTheme/admin/base.html.twig" %}

{%- block content_title -%}{% trans %}api.applications.delete{% endtrans %}{%- endblock -%}

{%- block content_header_nav -%}
    <a class="content-header-nav-back uk-navbar-content"
       href="{{ path('adminApiApplications') }}"
       title="{% trans %}back_to.applications{% endtrans %}"
       data-uk-tooltip="{animation:true}"><i class="uk-icon-rz-back-parent"></i></a>
{%- endblock -%}

{%- block content_body -%}
    <article class="content content-delete content-no-action-menu">
        {% form_theme form '@Rozier/forms.html.twig' %}
        {{ form_start(form, {
            'attr': {
                'id': 'application-form',
                'class': 'uk-form uk-form-stacked'
            }
        }) }}{{ form_widget(form) }}
        <fieldset data-uk-margin>
            <legend class="uk-alert uk-alert-danger"><i class="uk-icon uk-icon-warning"></i> {% trans %}api.applications.are_you_sure_delete{% endtrans %}</legend>
            {% spaceless %}
                <a href="{{ path('adminApiApplications') }}"
                   class="uk-button"><i class="uk-icon-rz-back-parent"></i> {% trans %}cancel{% endtrans %}</a>
                <button data-action-save="#application-form"
                        class="uk-button uk-button-danger" type="submit">
                    <span class="icon-container"><i class="uk-icon-rz-trash-o"></i></span>
                    <span class="label"><span class="label-text">{% block content_form_submit_label %}
                                {%- trans -%}api.applications.form.delete{%- endtrans -%}
                            {% endblock %}</span></span>
                </button>
            {% endspaceless %}
        </fieldset>
        {{ form_end(form) }}
    </article>
{%- endblock -%}
